# DegreePath Tutor Configuration
# Copy this file to .env and update values

# Part 1 API Configuration
PART1_HOST=127.0.0.1
PART1_PORT=8000

# Part 2 API Configuration
PART2_HOST=127.0.0.1
PART2_PORT=8001

# LM Studio Configuration (Optional - for AI features)
# Set USE_LM_STUDIO=true to enable AI-powered responses
# Otherwise, the system uses rule-based generation
USE_LM_STUDIO=false
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=your-model-name-here

# Part 1 API URL (used by Part 2 to communicate with Part 1)
PART1_API_URL=http://127.0.0.1:8000

# CORS Origins (comma-separated, use * for all)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
